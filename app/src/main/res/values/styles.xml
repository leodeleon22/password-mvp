<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">@integer/max_length</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#e6e600</item>
        <item name="colorSwitchThumbNormal">#cc0000</item>
    </style>
</resources>
